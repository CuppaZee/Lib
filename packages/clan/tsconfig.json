{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true
  },

  "exclude": [
    "node_modules",
    "lib"
  ],

  "include": [
    "src/**/*"
  ]
}